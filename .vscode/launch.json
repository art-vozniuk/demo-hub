{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Compute Service (Worker)",
      "type": "python",
      "request": "launch",
      "module": "services.compute.main",
      "python": "${workspaceFolder}/services/compute/.venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/services/compute:${workspaceFolder}/services/external/face_swap"
      },
      "envFile": "${workspaceFolder}/services/compute/.env",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug Core Service (API)",
      "type": "python",
      "request": "launch",
      "python": "${workspaceFolder}/services/core/.venv/bin/python",
      "program": "${workspaceFolder}/services/core/.venv/bin/uvicorn",
      "args": [
        "services.core.main:app",
        "--host", "0.0.0.0",
        "--port", "8081",
        "--reload"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "envFile": "${workspaceFolder}/services/core/.env",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}